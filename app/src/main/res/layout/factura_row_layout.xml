<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/total_factura"
            android:text="total_factura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ci"
            android:text="CI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:textSize="20sp"
            android:layout_above="@+id/fecha_emision"
            android:layout_alignRight="@+id/fecha_emision"
            android:layout_alignEnd="@+id/fecha_emision" />

        <TextView
            android:id="@+id/fecha_emision"
            android:text="fecha_emision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/total_factura"
            android:textSize="15sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>